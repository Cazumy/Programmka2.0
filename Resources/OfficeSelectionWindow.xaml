<mah:MetroWindow x:Class="Programmka.Resources.OfficeSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:Programmka.Resources"
        mc:Ignorable="d"
        Title="Выберите продукты Office" 
        Height="250" Width="450" 
        ResizeMode="NoResize" 
        ShowInTaskbar="False" 
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Window.Resources>
        <Style TargetType="mah:ToggleSwitch">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Gray" />
            <Setter Property="IsOn" Value="True"/>
            <Setter Property="OnContent" Value="Вкл."/>
            <Setter Property="OffContent" Value="Выкл."/>
            <Setter Property="Margin" Value="5 0 0 0"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <Grid Background="Transparent">
        <Button Content="X" Margin="2" Width="30" Padding="0" Panel.ZIndex="1"
        Height="30" HorizontalAlignment="Right" 
        VerticalAlignment="Top" BorderThickness="2" 
        BorderBrush="Black" Click="CloseWindow"
        Background="#FFE6F3FF"/>
        <Border Background="#FF56564A" BorderThickness="2" BorderBrush="Black" CornerRadius="10"/>
        
        <StackPanel Margin="15 40 0 0" HorizontalAlignment="Left">
            <StackPanel Orientation="Horizontal" Width="185" HorizontalAlignment="Left">
                <TextBlock Text="Access " Margin="0 0 60 0"/>
                <mah:ToggleSwitch x:Name="AccessToggle"
                          Toggled="AccessSelection"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"  HorizontalAlignment="Left">
                <TextBlock Text="OneDrive (Groove)"/>
                <mah:ToggleSwitch x:Name="OneDriveGrooveToggle" 
                          Toggled="OneDriveGrooveSelection"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Width="185" HorizontalAlignment="Left">
                <TextBlock Text="OneDrive Desktop" Margin="0 0 2 0"/>
                <mah:ToggleSwitch x:Name="OneDriveDesktopToggle" 
                          Toggled="OneDriveDesktopSelection"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="185">
                <TextBlock Text="Outlook" Margin="0 0 56 0"/>
                <mah:ToggleSwitch x:Name="OutlookToggle" 
                          Toggled="OutlookSelection"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Width="185" HorizontalAlignment="Left">
                <TextBlock Text="Publisher" Margin="0 0 50 0"/>
                <mah:ToggleSwitch x:Name="PublisherToggle" 
                          Toggled="PublisherSelection"/>
            </StackPanel>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" Margin="0 40 0 0" Width="225">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Excel" Margin="0 0 72 0"/>
                <mah:ToggleSwitch x:Name="ExcelToggle"
                                  Toggled="ExcelSelection"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Skype for Business"/>
                <mah:ToggleSwitch x:Name="SkypeToggle"
                      Toggled="SkypeSelection"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="OneNote " Margin="0 0 46 0"/>
                <mah:ToggleSwitch x:Name="OneNoteToggle"
                      Toggled="OneNoteSelection"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="PowerPoint " Margin="0 0 35 0"/>
                <mah:ToggleSwitch x:Name="PowerPointToggle"
                      Toggled="PowerPointSelection"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Word" Margin="0 0 69 0"/>
                <mah:ToggleSwitch x:Name="WordToggle"
                      Toggled="WordSelection"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</mah:MetroWindow>
