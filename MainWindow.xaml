<Window x:Class="Programmka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Programmka"
        mc:Ignorable="d"
        Loaded="MainWindow_Loaded"
        Title="Programmka" 
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" 
        SizeToContent="WidthAndHeight">
    <Window.Background>
        <SolidColorBrush Color="#FF290029"/>
    </Window.Background>
    <Window.Resources>
        <Style x:Key="GridForTweaks" TargetType="Grid">
            <Setter Property="Width" Value="300"></Setter>
            <Setter Property="Height" Value="46"></Setter>
        </Style>
        <Style x:Key="ToggleButtonBackgroundStyle" TargetType="{x:Type ContentControl}">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Margin" Value="0 0 0 8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ContentControl}">
                        <Border Background="#FFFFC3BF"
                                CornerRadius="15"
                                BorderThickness="1.4"
                                BorderBrush="#FF2B1C1C">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <!-- Image -->
                                <Image Width="34"
                                       Height="34"
                                       Source="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(local:ToggleButtonContent.ImageSource)}" Margin="20,0,0,0"/>
                                <!-- Text -->
                                <TextBlock Grid.Column="1"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           Text="{TemplateBinding Content}" Margin="14 0 0 0" FontFamily="MV Boli"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ToggleButtonStyle" TargetType="{x:Type CheckBox}">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Margin" Value="0 0 10 8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CheckBox}">
                        <Grid>
                            <Border x:Name="ToggleBorder"
                                    Background="ForestGreen"
                                    CornerRadius="7"
                                    Height="14.5"
                                    Width="35"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    BorderThickness="1.5"
                                    BorderBrush="Black">
                            </Border>
                            <Ellipse x:Name="ToggleButton"
                                     Height="20"
                                     Width="20"
                                     Fill="#FF0F730F"
                                     Stroke="Black" 
                                     StrokeThickness="2" HorizontalAlignment="Left" VerticalAlignment="Center">
                            </Ellipse>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="ToggleButton"
                                Property="Fill"
                                Value="DarkRed"/>
                                <Setter TargetName="ToggleBorder"
                                Property="Background"
                                Value="IndianRed"/>
                                <Setter TargetName="ToggleButton"
                                Property="Margin"
                                Value="17 0 0 0"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="ToggleBorder"
                                Property="Background"
                                Value="Green"/>
                                <Setter TargetName="ToggleButton"
                                Property="Margin"
                                Value="-1 0 0 0"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ToggleButton" Property="Stroke" Value="Black"/>
                                <Setter TargetName="ToggleBorder" Property="BorderBrush" Value="Black"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ClickButton" TargetType="Button">
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="BorderBrush" Value="DarkGray"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5 5 5 5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter Content="{TemplateBinding Content}" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="LightBlue"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="DarkBlue"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="DarkBlue"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="Black"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TabItemStyle" TargetType="TabItem">
            <Setter Property="Height" Value="64" />
            <Setter Property="Width" Value="56" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="tabItemBackground" 
                                Background="#FF5D0049" 
                                Margin="4 6 6 6" 
                                CornerRadius="6" 
                                BorderThickness="2" 
                                BorderBrush="#FF21031A" 
                                Cursor="Hand"
                                MouseEnter="TabItem_MouseEnter"
                                MouseLeave="TabItem_MouseLeave">
                            <Grid>
                                <Image Source="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(local:TabItemContent.ImageSource)}" 
                                       Stretch="Fill" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center" 
                                       Margin="3" />
                                <ContentPresenter ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="tabItemBackground" Property="Background" Value="#FF7A0049" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="tabItemBackground" Property="Background" Value="#FF3C0330" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TabContentBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderThickness"  Value="3px" />
            <Setter Property="BorderBrush"  Value="#1b0000"/>
            <Setter Property="Background">
                <Setter.Value>
                    <ImageBrush ImageSource="Images\background.jpg"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Height="450" Width="880">
        <Image Source="Images/win10.png" HorizontalAlignment="Right" VerticalAlignment="Top" Height="50px" Margin="8"/>
        <TextBlock x:Name="tabItemDescription" 
                   VerticalAlignment="Top" 
                   HorizontalAlignment="Right" 
                   FontSize="16" 
                   Margin="0 22 50 0"
                   FontFamily="MV Boli" 
                   Foreground="White" 
                   Width="280" 
                   Height="30" 
                   TextWrapping="WrapWithOverflow"/>
        <TabControl TabStripPlacement="Top" Background="Transparent" Margin="16 0 16 8" BorderThickness="0">
            <TabItem x:Name="fileExplorerItem" Style="{StaticResource TabItemStyle}" local:TabItemContent.ImageSource="Images\file_explorer.png">
                <Border Style="{StaticResource TabContentBorderStyle}">
                    <StackPanel Margin="460,140,32,20">
                        <Grid Style="{StaticResource GridForTweaks}">
                            <ContentControl Style="{StaticResource ToggleButtonBackgroundStyle}"
                                            local:ToggleButtonContent.ImageSource="Images\disk.png"
                                            Content="Дубликаты дисков"/>
                            <CheckBox x:Name="DiskDuplicateButton" 
                                      Style="{StaticResource ToggleButtonStyle}" 
                                      IsChecked="False" 
                                      Checked="ReturnDiskDuplicate"
                                      Unchecked="RemoveDiskDuplicate"/>
                        </Grid>
                        <Grid Style="{StaticResource GridForTweaks}">
                            <ContentControl Style="{StaticResource ToggleButtonBackgroundStyle}"
                                            local:ToggleButtonContent.ImageSource="Images\quick_access.png"
                                            Content="Пункт &quot;Быстрый доступ&quot;"/>
                            <CheckBox x:Name="QuickAccessButton" 
                                      Style="{StaticResource ToggleButtonStyle}" 
                                      IsChecked="False" 
                                      Checked="ReturnQuickAccess" 
                                      Unchecked="RemoveQuickAccess"/>
                        </Grid>
                        <Grid Style="{StaticResource GridForTweaks}">
                            <ContentControl Style="{StaticResource ToggleButtonBackgroundStyle}"
                                            local:ToggleButtonContent.ImageSource="Images\3d_objects.png"
                                            Content="Папка &quot;Объёмные объекты&quot;"/>
                            <CheckBox x:Name="Objects3DButton" 
                                      Style="{StaticResource ToggleButtonStyle}" 
                                      IsChecked="False" 
                                      Checked="ReturnObjects3D" 
                                      Unchecked="RemoveObjects3D"/>
                        </Grid>
                        <Grid Style="{StaticResource GridForTweaks}">
                            <ContentControl Style="{StaticResource ToggleButtonBackgroundStyle}"
                                            local:ToggleButtonContent.ImageSource="Images\network.png"
                                            Content="Значок &quot;Сеть&quot;"/>
                            <CheckBox x:Name="NetworkIconButton" 
                                      Style="{StaticResource ToggleButtonStyle}" 
                                      IsChecked="False" 
                                      Checked="ReturnNetworkIcon" 
                                      Unchecked="RemoveNetworkIcon"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </TabItem>
            <TabItem x:Name="desktopItem" Style="{StaticResource TabItemStyle}" local:TabItemContent.ImageSource="Images\desktop.png">
                <Border Style="{StaticResource TabContentBorderStyle}">
                    <StackPanel Margin="460,140,32,20">
                        <Grid Style="{StaticResource GridForTweaks}">
                            <ContentControl Style="{StaticResource ToggleButtonBackgroundStyle}"
                                            local:ToggleButtonContent.ImageSource="Images\label.png"
                                            Content="Стрелки на ярлыках"/>
                            <CheckBox x:Name="LabelArrowsButton" 
                                      Style="{StaticResource ToggleButtonStyle}" 
                                      IsChecked="False" 
                                      Checked="ReturnLabelArrows" 
                                      Unchecked="RemoveLabelArrows"/>
                        </Grid>
                        <Grid Style="{StaticResource GridForTweaks}">
                            <ContentControl Style="{StaticResource ToggleButtonBackgroundStyle}"
                                            local:ToggleButtonContent.ImageSource="Images\WallpaperCompression.png"
                                            Content="Сжатие обоев рабочего стола"/>
                            <CheckBox x:Name="WallpaperCompressionButton" 
                                      Style="{StaticResource ToggleButtonStyle}" 
                                      IsChecked="False" 
                                      Checked="ReturnWallpaperCompression" 
                                      Unchecked="RemoveWallpaperCompression"/>
                        </Grid>
                        <Button x:Name="highlightColorChanger" Width="100" Height="60" Click="ChangeHighlightColor"/>
                    </StackPanel>
                </Border>
            </TabItem>
            <TabItem x:Name="activationItem" Style="{StaticResource TabItemStyle}" local:TabItemContent.ImageSource="Images/activation.png">
                <Border Style="{StaticResource TabContentBorderStyle}">
                    <StackPanel Margin="30,30,665,220">
                        <Button x:Name="ActivateWindowsButton" Style="{StaticResource ClickButton}" Content="Windows\Office" Click="ActivateWindows" Cursor="Hand"/>
                        <Button x:Name="ActivateWinRarButton" Style="{StaticResource ClickButton}" Content="WinRar" Click="ActivateWinRar"/>
                    </StackPanel>
                </Border>
            </TabItem>
            <TabItem x:Name="fixesItem" Style="{StaticResource TabItemStyle}" local:TabItemContent.ImageSource="Images/fix.png">
                <Border Style="{StaticResource TabContentBorderStyle}">
                    <StackPanel Margin="0 20 0 300" Width="204" HorizontalAlignment="Left">
                        <TextBox x:Name="BusNumberInput" HorizontalAlignment="Left" Width="100"/>
                        <Button x:Name="FixDisksButton" Style="{StaticResource ClickButton}" Content="Apply" Click="FixHardDisks" HorizontalAlignment="Right" Width="54" Height="16" Margin="0 -20 20 0"/>
                    </StackPanel>
                </Border>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
