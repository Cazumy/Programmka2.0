<Window x:Class="Programmka2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Loaded="MainWindow_Loaded"
                Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="C:\Users\HoMeMem\source\repos\Programmka2.0\RS1.ico">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#496FFF"/>
        <SolidColorBrush x:Key="SecundaryBackgroundColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="PrimaryBlueColor" Color="#263FAA"/>
        <SolidColorBrush x:Key="PrimaryGrayColor" Color="#64677A"/>
        <SolidColorBrush x:Key="SecundaryBlueColor" Color="#496FFF"/>
        <SolidColorBrush x:Key="SecundaryGrayColor" Color="#CECECE"/>
        <SolidColorBrush x:Key="TertiaryBlueColor" Color="#C2D1FC"/>

        <Style x:Key="BackgroundCheckBox" TargetType="{x:Type Rectangle}">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Fill" Value="Pink"/>
            <Setter Property="RadiusX" Value="15"/>
            <Setter Property="RadiusY" Value="15"/>
            <Setter Property="Margin" Value="0 0 0 8"/>
        </Style>

        <Style x:Key="CheckBoxStyle" TargetType="{x:Type CheckBox}">
            <Setter Property="Background" Value="{DynamicResource SecundaryGrayColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryGrayColor}"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="48"/>
            <Setter Property="Margin" Value="0 2 0 0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CheckBox}">
                        <Grid>
                            <Border x:Name="ToggleBorder"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="7"
                                    Height="14"
                                    Width="35"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth=".5" Opacity=".2"/>
                                </Border.Effect>
                            </Border>
                            <Ellipse x:Name="ToggleButton"
                                     Height="20"
                                     Width="20"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Left"
                                     Fill="{DynamicResource SecundaryBackgroundColor}"
                                     Stroke="{TemplateBinding BorderBrush}" 
                                     StrokeThickness="3">
                                <Ellipse.Effect>
                                    <DropShadowEffect ShadowDepth="0.5" Opacity=".2"/>
                                </Ellipse.Effect>
                            </Ellipse>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="ToggleButton"
                                Property="Fill"
                                Value="{DynamicResource SecundaryBlueColor}"/>
                                <Setter TargetName="ToggleButton"
                                Property="Stroke"
                                Value="{DynamicResource PrimaryBlueColor}"/>
                                <Setter TargetName="ToggleBorder"
                                Property="Background"
                                Value="{DynamicResource TertiaryBlueColor}"/>
                                <Setter TargetName="ToggleButton"
                                Property="Margin"
                                Value="15 0 0 0"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="ToggleBorder"
                                Property="Background"
                                Value="{DynamicResource SecundaryGrayColor}"/>
                                <Setter TargetName="ToggleButton"
                                Property="Margin"
                                Value="0 0 0 0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="{DynamicResource PrimaryBackgroundColor}">

        <Canvas Margin="386,190,24,27">
            <StackPanel Margin="80 5 0 0">
                <Rectangle x:Name="DiskDuplicateBackground" 
                           Style="{DynamicResource BackgroundCheckBox}"/>
                <Rectangle x:Name="LabelArrowsBackground" 
                           Style="{DynamicResource BackgroundCheckBox}"/>
                <Rectangle x:Name="QuickAccessBackground" 
                           Style="{DynamicResource BackgroundCheckBox}"/>
                <Rectangle x:Name="Objects3DBackground" 
                           Style="{DynamicResource BackgroundCheckBox}"/>
                <Rectangle x:Name="NetworkBackground" 
                           Style="{DynamicResource BackgroundCheckBox}"/>
            </StackPanel>

            <StackPanel Margin="100 13 0 0">
                <Image Source="C:\Users\HoMeMem\source\repos\Programmka2.0\disk.png" Height="34" Width="34" Margin="0 -8 0 8"/>
                <Image Source="C:\Users\HoMeMem\source\repos\Programmka2.0\label.png" Height="34" Width="34"/>
                <Image Source="C:\Users\HoMeMem\source\repos\Programmka2.0\quick_access.png" Height="34" Width="34" Margin="0 8 0 0"/>
                <Image Source="C:\Users\HoMeMem\source\repos\Programmka2.0\3d_objects.png" Height="34" Width="34" Margin="0 8 0 0"/>
                <Image Source="C:\Users\HoMeMem\source\repos\Programmka2.0\network.png" Height="34" Width="34" Margin="0 8 0 0"/>
            </StackPanel>

            <StackPanel HorizontalAlignment="Left" Canvas.Left="335" VerticalAlignment="Center">
                <CheckBox x:Name="DiskDuplicate"
                          Style="{DynamicResource CheckBoxStyle}" IsChecked="False" Checked="ReturnDiskDuplicate" Unchecked="RemoveDiskDuplicate"/>
                <CheckBox x:Name="LabelArrows" VerticalAlignment="Center" HorizontalAlignment="Center"
                          Style="{DynamicResource CheckBoxStyle}" IsChecked="False" Checked="ReturnLabelArrows" Unchecked="RemoveLabelArrows"/>
                <CheckBox x:Name="QuickAccess" VerticalAlignment="Center" HorizontalAlignment="Center"
                          Style="{DynamicResource CheckBoxStyle}" IsChecked="False" Checked="ReturnQuickAccess" Unchecked="RemoveQuickAccess"/>
                <CheckBox x:Name="Objects3D" VerticalAlignment="Center" HorizontalAlignment="Center"
                          Style="{DynamicResource CheckBoxStyle}" IsChecked="False" Checked="ReturnObjects3D" Unchecked="RemoveObjects3D"/>
                <CheckBox x:Name="NetworkIcon" VerticalAlignment="Center" HorizontalAlignment="Center"
                          Style="{DynamicResource CheckBoxStyle}" IsChecked="False" Checked="ReturnNetworkIcon" Unchecked="RemoveNetworkIcon"/>
            </StackPanel>
            <StackPanel Margin="160,9,0,3" >
                <Label Content="DiskDuplications" Margin="0,0,0,15"/>
                <Label Content="Arrows on labels" Margin="0,0,0,16"/>
                <Label Content="3D objects" Margin="0,0,0,16"/>
                <Label Content="Quick access" Margin="0,0,0,16"/>
                <Label Content="Network icon"/>
            </StackPanel>

        </Canvas>
    </Grid>
</Window>