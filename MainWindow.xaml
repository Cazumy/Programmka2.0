<Window x:Class="Programmka2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Programmka2._0"
        mc:Ignorable="d"
        Loaded="MainWindow_Loaded"
                Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="C:\Users\HoMeMem\source\repos\Programmka2.0\RS1.ico">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#496FFF"/>
        <SolidColorBrush x:Key="SecundaryBackgroundColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="PrimaryBlueColor" Color="#263FAA"/>
        <SolidColorBrush x:Key="PrimaryGrayColor" Color="#64677A"/>
        <SolidColorBrush x:Key="SecundaryBlueColor" Color="#496FFF"/>
        <SolidColorBrush x:Key="SecundaryGrayColor" Color="#CECECE"/>
        <SolidColorBrush x:Key="TertiaryBlueColor" Color="#C2D1FC"/>

        <Style x:Key="ToggleButtonBackgroundStyle" TargetType="{x:Type ContentControl}">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0 0 0 8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ContentControl}">
                        <Border Background="Pink"
                                CornerRadius="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <!-- Image -->
                                <Image Width="34"
                                       Height="34"
                                       Source="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(local:ToggleButtonContent.ImageSource)}" Margin="20,0,0,0" Cursor=""/>
                                <!-- Text -->
                                <TextBlock Grid.Column="1"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           Text="{TemplateBinding Content}" Margin="32,0,0,0" Cursor=""/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ToggleButtonStyle" TargetType="{x:Type CheckBox}">
            <Setter Property="Background" Value="{DynamicResource SecundaryGrayColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryGrayColor}"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="48"/>
            <Setter Property="Margin" Value="0 2 0 0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CheckBox}">
                        <Grid>
                            <Border x:Name="ToggleBorder"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="7"
                                    Height="14"
                                    Width="35"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth=".5" Opacity=".2"/>
                                </Border.Effect>
                            </Border>
                            <Ellipse x:Name="ToggleButton"
                                     Height="20"
                                     Width="20"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Left"
                                     Fill="{DynamicResource SecundaryBackgroundColor}"
                                     Stroke="{TemplateBinding BorderBrush}" 
                                     StrokeThickness="3">
                                <Ellipse.Effect>
                                    <DropShadowEffect ShadowDepth="0.5" Opacity=".2"/>
                                </Ellipse.Effect>
                            </Ellipse>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="ToggleButton"
                                Property="Fill"
                                Value="{DynamicResource SecundaryBlueColor}"/>
                                <Setter TargetName="ToggleButton"
                                Property="Stroke"
                                Value="{DynamicResource PrimaryBlueColor}"/>
                                <Setter TargetName="ToggleBorder"
                                Property="Background"
                                Value="{DynamicResource TertiaryBlueColor}"/>
                                <Setter TargetName="ToggleButton"
                                Property="Margin"
                                Value="15 0 0 0"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="ToggleBorder"
                                Property="Background"
                                Value="{DynamicResource SecundaryGrayColor}"/>
                                <Setter TargetName="ToggleButton"
                                Property="Margin"
                                Value="0 0 0 0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <Grid Background="{DynamicResource PrimaryBackgroundColor}">
        <Canvas Margin="386,190,24,27">
            <StackPanel Margin="80 5 0 0">
                <ContentControl x:Name="DiskDuplicateBackground" 
                                Style="{StaticResource ToggleButtonBackgroundStyle}"
                                local:ToggleButtonContent.ImageSource="C:\Users\HoMeMem\source\repos\Programmka2.0\disk.png"
                                Content="DiskDuplications"/>
                
                <ContentControl x:Name="LabelArrowsBackground" 
                                Style="{StaticResource ToggleButtonBackgroundStyle}"
                                local:ToggleButtonContent.ImageSource="C:\Users\HoMeMem\source\repos\Programmka2.0\label.png"
                                Content="Arrows on labels"/>
                
                <ContentControl x:Name="QuickAccessBackground" 
                                Style="{StaticResource ToggleButtonBackgroundStyle}"
                                local:ToggleButtonContent.ImageSource="C:\Users\HoMeMem\source\repos\Programmka2.0\quick_access.png"
                                Content="Quick access"/>
                
                <ContentControl x:Name="Objects3DBackground" 
                                Style="{StaticResource ToggleButtonBackgroundStyle}"
                                local:ToggleButtonContent.ImageSource="C:\Users\HoMeMem\source\repos\Programmka2.0\3d_objects.png"
                                Content="3D objects"/>
                
                <ContentControl x:Name="NetworkBackground" 
                                Style="{StaticResource ToggleButtonBackgroundStyle}"
                                local:ToggleButtonContent.ImageSource="C:\Users\HoMeMem\source\repos\Programmka2.0\network.png"
                                Content="Network icon"/>
            </StackPanel>

            <StackPanel HorizontalAlignment="Left" Canvas.Left="335" VerticalAlignment="Center">
                <CheckBox x:Name="DiskDuplicate"
                          Style="{DynamicResource ToggleButtonStyle}" IsChecked="False" Checked="ReturnDiskDuplicate" Unchecked="RemoveDiskDuplicate"/>
                <CheckBox x:Name="LabelArrows" VerticalAlignment="Center" HorizontalAlignment="Center"
                          Style="{DynamicResource ToggleButtonStyle}" IsChecked="False" Checked="ReturnLabelArrows" Unchecked="RemoveLabelArrows"/>
                <CheckBox x:Name="QuickAccess" VerticalAlignment="Center" HorizontalAlignment="Center"
                          Style="{DynamicResource ToggleButtonStyle}" IsChecked="False" Checked="ReturnQuickAccess" Unchecked="RemoveQuickAccess"/>
                <CheckBox x:Name="Objects3D" VerticalAlignment="Center" HorizontalAlignment="Center"
                          Style="{DynamicResource ToggleButtonStyle}" IsChecked="False" Checked="ReturnObjects3D" Unchecked="RemoveObjects3D"/>
                <CheckBox x:Name="NetworkIcon" VerticalAlignment="Center" HorizontalAlignment="Center"
                          Style="{DynamicResource ToggleButtonStyle}" IsChecked="False" Checked="ReturnNetworkIcon" Unchecked="RemoveNetworkIcon"/>
            </StackPanel>
        </Canvas>

        <Canvas d:IsHidden="True">
            <StackPanel>

            </StackPanel>
        </Canvas>
    </Grid>
</Window>